<!DOCTYPE html>
<html>

    <head>
        <title>{{ title }}</title>
    </head>

    <body>
        <h1>Mi carrito</h1>

        <a href="/">Página principal</a>
        <a href="/products">Catálogo de juegos</a>

        {{#if products}}
            {{#each products}}
                <h2>{{this.name}}</h2>
                <h3>{{this.price}} €</h3>
            {{/each}}

            <h3>Precio a pagar: {{this.total}} €</h3>
            
        {{/if}}

        <a href="/products/{{this.id}}"><button>Pagar</button></a>
        <p>{{user.id}}</p>
    </body>

</html>