<!DOCTYPE html>
<html>

    <head>
    <title>{{ title }}</title>
    </head>

    <a href="/products">Volver a página de productos</a>

    <body>
        {{#if this.product}}
            <h1>{{ this.product.name }}</h1>
            <p>{{ this.product.description }}</p>
            <p>{{ this.product.price }}€</p>
            {{#if this.product.image}}
                    <img src="{{this.product.image}}" alt="{{this.product.name}}" width="1000px"></img>
            {{/if}}
        {{/if}}

        <form action="/products/cart" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <input type="submit" value="Añadir juego al carrito">
        </form>

        <h3>Modificar imagen</h3>
        <form action="products/create" method="POST" enctype="multipart/form-data">
            <label for="image">
                <p>Imagen nueva: </p>
                <input type="file" name="image" accept="image/png, image/jpeg">
            </label>
            <input type="submit" value="Insertar nueva imagen">
        </form>

    </body>

</html>